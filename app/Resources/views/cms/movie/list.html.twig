{% extends 'cms_base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="">
                    <a class="btn btn-outline-info pull-right" href="{{ path('cms_create_movie')}}">Add new movie</a>
                </div>
                <h2>List of movies</h2>
            </div>
        </div>

        <table class="table">
            <thead>
            <tr>
                <!--<th>Image</th> -->
                <th>Movie</th>
                <th>Year</th>
                <th>Description</th>
                <th>View</th>
                <th>Edit movie</th>
                <th>Add cast & crew</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for movie in movies %}
                <tr>
                    <!--<td>{//{ movie.imagePath }}</td> -->
                    <td>{{ movie.name }}</td>
                    <td>{{ movie.year }}</td>
                    <td>{{ movie.description }}</td>
                    <td>
                        <a href="{{ path('cms_show_movie', {'id': movie.id}) }}" class="btn btn-success">View</a>
                    </td>
                    <td>
                        <a href="{{ path('cms_edit_movie', {'id': movie.id}) }}" class="btn btn-info">Edit</a>
                    </td>
                    <td>
                        <a href="{{ path('cms_add_crew_movie', {'id': movie.id}) }}" class="btn btn-warning">Add</a>
                    </td>
                    <td>
                        <a href="{{ path('cms_delete_movie', {'id': movie.id}) }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}