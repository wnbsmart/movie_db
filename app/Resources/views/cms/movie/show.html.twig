{% extends 'cms_base.html.twig' %}

{% block body %}

    <div class="container">
        <h2>{{ movie.name }} ({{ movie.year }})</h2>

        <p>Description: {{ movie.description }}</p>
        <p>Director(s):
        <ul>
            {% if directors %}
                {% for director in directors %}
                    <li>{{ director.getperson.getname }}</li>
                {% endfor %}
            {% else %}
                Unknown
            {% endif %}
        </ul>
        </p>
        <p>Writer(s):
        <ul>
            {% if writers %}
                {% for writer in writers %}
                    <li>{{ writer.getperson.getname }}</li>
                {% endfor %}
            {% else %}
                Unknown
            {% endif %}
        </ul>
        </p>
        <p>Actors:
        <ul>
            {% if actors %}
                {% for actor in actors %}
                    <li>{{ actor.getperson.getname }}</li>
                {% endfor %}
            {% else %}
                Unknown
            {% endif %}
        </ul>
        </p>
    </div>


{% endblock %}